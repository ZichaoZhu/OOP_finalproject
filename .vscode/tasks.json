{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/build"
    },
    "tasks": [
        {
            "type": "shell",
            "label": "Create Build Directory",
            "command": "mkdir",
            "args": [
                "-p", // 避免文件夹已存在时报错
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "Configure CMake",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=TRUE",
                ".."
            ],
            "dependsOn": "Create Build Directory"
        },
        {
            "label": "Build Project",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "make",
            "dependsOn": "Configure CMake" // 依赖 CMake 配置任务
        },
        {
            "label": "Run Program",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/binary_test",
            "dependsOn": "Build Project",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        }
    ]
}